generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  clerkUserId String // Store Clerk user ID instead of a separate User model
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       File[]
}

model File {
  id        String   @id @default(cuid())
  name      String
  content   String
  language  String   @default("javascript")
  file_icon String
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
